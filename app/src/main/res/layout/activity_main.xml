<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/amount_edit_text"
        android:layout_width="145dp"
        android:layout_height="53dp"
        android:layout_marginBottom="48dp"
        android:hint="Enter amount"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/to_spinner"
        app:layout_constraintEnd_toEndOf="@+id/to_spinner"
        app:layout_constraintStart_toStartOf="@+id/to_spinner"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/from_spinner"
        android:layout_width="214dp"
        android:layout_height="38dp"
        android:layout_marginBottom="68dp"
        app:layout_constraintBottom_toTopOf="@+id/result_text_view"
        app:layout_constraintEnd_toEndOf="@+id/result_text_view"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/result_text_view"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/to_spinner"
        android:layout_width="231dp"
        android:layout_height="32dp"
        android:layout_marginBottom="104dp"
        app:layout_constraintBottom_toTopOf="@+id/from_spinner"
        app:layout_constraintEnd_toEndOf="@+id/from_spinner"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/from_spinner"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/convert_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:text="Convert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="147dp"
        android:layout_height="35dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/convert_button"
        app:layout_constraintEnd_toEndOf="@+id/convert_button"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/convert_button"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>